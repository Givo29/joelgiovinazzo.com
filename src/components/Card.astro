---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="container mx-auto p-5 transition-all duration-300 ease-in-out">
  <div class="flex flex-col items-center">
    <div
      class="w-full space-x-3 divide-y divide-gray-200 rounded-lg bg-white lg:max-w-[66%]"
    >
      <div class="px-4 py-5 text-center text-2xl font-bold sm:px-6">
        {title}
      </div>
      <div
        class="spacing-x-4 md:spacing-x-0 flex flex-wrap justify-around px-4 py-5 sm:px-6"
      >
        <slot />
      </div>
    </div>
  </div>
</div>
