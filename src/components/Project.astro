---
interface Props {
  name: string;
  description: string;
  githubLink: string;
}

const { name, description, githubLink } = Astro.props;
---

<li
  class="flex flex-wrap items-center justify-between gap-x-6 gap-y-4 py-5 sm:flex-nowrap"
>
  <div>
    <p class="text-left text-sm font-semibold leading-6 text-gray-900">
      <a href={githubLink} class="text-blue-600 hover:underline">{name}</a>
    </p>
    <div class="mt-1 flex items-center gap-x-2 text-xs leading-5 text-gray-500">
      <p class="text-left">
        {description}
      </p>
    </div>
  </div>
  <dl class="flex w-full flex-none justify-between gap-x-8 sm:w-auto">
    <div class="flex space-x-1">
      <dt class="sr-only">Technologies</dt>
      <slot />
    </div>
  </dl>
</li>
